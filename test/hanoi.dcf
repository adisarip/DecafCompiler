// tower of hannoi
// recursive function to solve tower of hanoi puzzle (with 4 disks)

class Program
{
    void towerOfHanoi(int n, int from_rod, int to_rod, int aux_rod) 
    { 
        if (n == 1) 
        { 
            callout ("printf", "\nMove disk 1 from rod %d to rod %d", from_rod, to_rod));
            return; 
        } 
        towerOfHanoi(n-1, from_rod, aux_rod, to_rod); 
        printf("\n Move disk %d from rod %d to rod %d", n, from_rod, to_rod); 
        towerOfHanoi(n-1, aux_rod, to_rod, from_rod); 
    }

    void main()
    {
        int n = 4; // Number of disks 
        towerOfHanoi(n, 1, 2, 3);  // 1, 2 and 3 are names of rods 
        return 0;
    }
}
