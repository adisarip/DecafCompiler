
// Calculate and print the factorial of the number.

class Factorial
{
    void main ()
    {
        int N;
        int factN;
        N = 7;
        factN = 1;

        if (N == 0)
        {
            factN = 1;
        }
        else
        {
            for i=1, N+1
            {
                factN = factN * i;
            }
	}
        callout("printf", "Factorial of %d is: %d ", N, factN);
    }
}
